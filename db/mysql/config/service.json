{
  "description": "singleton service factory configuration",
  "singletons": [
    {
      "javax.sql.DataSource": [
        {
          "com.zaxxer.hikari.HikariDataSource":
          {
            "jdbcUrl": "jdbc:mysql://mysqldb:3306/oauth2?useSSL=false",
